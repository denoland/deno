{
  "tempDir": true,

  "tests": {
    "npm_ok": {
      "steps": [
        {
          "args": "install",
          "output": "[WILDCARD]"
        },
        {
          "args": "bundle -o out.js main.ts",
          "output": "bundle.out"
        },
        {
          "args": "run out.js",
          "output": "bar\nthing\n"
        }
      ]
    },
    "npm_bad": {
      "steps": [
        {
          "args": "install",
          "output": "[WILDCARD]"
        },
        {
          "args": "bundle bad.ts",
          "output": "bad.out",
          "exitCode": 1
        }
      ]
    },
    "local_ok": {
      "steps": [
        {
          "args": "bundle -o out.js local.ts",
          "output": "local.out"
        },
        {
          "args": "run out.js",
          "output": "import failed\nafter import\n"
        }
      ]
    },
    "local_bad": {
      "steps": [
        {
          "args": "bundle local_bad.ts",
          "output": "local_bad.out",
          "exitCode": 1
        }
      ]
    }
  }
}
