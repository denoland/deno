{
  "tempDir": true,
  "envs": {
    "DENO_DONT_USE_INTERNAL_UPGRADE_TEST": "1"
  },
  "steps": [
    {
      "args": "eval Deno.copyFileSync(Deno.execPath(),'./deno_copy');",
      "exitCode": 0,
      "output": ""
    },
    {
      "commandName": "./deno_copy",
      "args": "upgrade --force",
      "output": "upgrade.out",
      "exitCode": 0,
      "flaky": true
    },
    {
      "commandName": "./deno_copy",
      "args": "--version",
      "exitCode": 0,
      "output": "version.out"
    }
  ]
}
