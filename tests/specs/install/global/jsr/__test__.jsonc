{
  "tempDir": true,
  "steps": [{
    "if": "unix",
    "args": "install -g --allow-scripts --root ./bins jsr:@denotest/echo",
    "output": "install.out"
  }, {
    "if": "unix",
    "commandName": "./bins/bin/echo",
    "args": ["hello", "there"],
    "output": "run.out",
    "exitCode": 0
  }, {
    "if": "windows",
    "args": "install -g --allow-scripts --root ./bins jsr:@denotest/echo",
    "output": "install.out"
  }, {
    "if": "windows",
    "commandName": "./bins/bin/echo.cmd",
    "args": ["hello", "there"],
    "output": "run.out",
    "exitCode": 0
  }]
}
