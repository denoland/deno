{
  "tempDir": true,
  "tests": {
    "basic_audit": {
      "steps": [
        {
          "args": "audit",
          "output": "basic.out"
        }
      ]
    },
    "with_ignore_unfixable": {
      "steps": [
        {
          "args": "audit --ignore-unfixable",
          "output": "ignore_unfixable.out"
        }
      ]
    },
    "with_ignore_registry_errors": {
      "steps": [
        {
          "args": "audit --ignore-registry-errors",
          "output": "ignore_registry.out"
        }
      ]
    },
    "with_level_high": {
      "steps": [
        {
          "args": "audit --level high",
          "output": "level_high.out"
        }
      ]
    },
    "combined_flags": {
      "steps": [
        {
          "args": "audit --ignore-unfixable --ignore-registry-errors --level moderate",
          "output": "combined.out"
        }
      ]
    }
  }
}
