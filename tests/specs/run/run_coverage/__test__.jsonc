{
  "tempDir": true,
  "tests": {
    "run_coverage": {
      "steps": [
        {
          "args": "run --unstable-coverage foo.ts",
          "output": "0\n0\n"
        },
        {
          "args": "coverage",
          "output": "coverage_summary.out"
        }
      ]
    },
    "run_coverage_env": {
      "steps": [
        {
          "args": "run foo.ts",
          "output": "0\n0\n",
          "envs": {
            "DENO_UNSTABLE_COVERAGE_DIR": "my_coverage_dir"
          }
        },
        {
          "args": "coverage my_coverage_dir",
          "output": "coverage_summary.out"
        }
      ]
    }
  }
}
