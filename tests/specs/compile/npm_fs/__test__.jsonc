{
  "tempDir": true,
  // use this so the vfs output is all in the same folder
  "canonicalizedTempDir": true,
  "steps": [{
    "if": "notMacIntel",
    "args": "compile -A --output main main.ts",
    "output": "compile.out"
  }, {
    "if": "notMacIntel",
    "commandName": "./main",
    "args": [],
    "output": "main.out"
  }, {
    "if": "windows",
    "args": "compile -A --output main.exe main.ts",
    "output": "compile.out"
  }, {
    "if": "windows",
    "commandName": "./main.exe",
    "args": [],
    "output": "main.out"
  }]
}
