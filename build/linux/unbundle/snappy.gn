import("//build/shim_headers.gni")

shim_headers("snappy_shim") {
  root_path = "src"
  headers = [
    "snappy-c.h",
    "snappy-sinksource.h",
    "snappy-stubs-public.h",
    "snappy.h",
  ]
}

source_set("snappy") {
  deps = [
    ":snappy_shim",
  ]
  libs = [ "snappy" ]
}
